{
  "name": "spring-couplet-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "春联生成器 Monorepo - 包含 Web 端和微信小程序",
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "build:web": "cd web && npm run build",
    "dev:miniprogram": "cd miniprogram && npm run compile",
    "build:shared": "cd shared && npm run build",
    "install:all": "npm install && cd web && npm install && cd ../miniprogram && npm install && cd ../shared && npm install"
  },
  "workspaces": [
    "web",
    "miniprogram",
    "shared"
  ],
  "keywords": [
    "spring-couplet",
    "monorepo",
    "wechat-miniprogram",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
