/* pages/history/history.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f8f8f8;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 28rpx;
  color: #ccc;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.name-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.position-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  color: #fff;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  margin-bottom: 24rpx;
}

.horizontal-scroll {
  background: linear-gradient(135deg, #ffd700 0%, #feca57 100%);
  color: #c41d1d;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  letter-spacing: 8rpx;
  margin-bottom: 16rpx;
}

.couplet-lines {
  display: flex;
  gap: 16rpx;
}

.couplet-line {
  flex: 1;
  background: linear-gradient(135deg, #c41d1d 0%, #ff5252 100%);
  color: #fff;
  padding: 24rpx 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  letter-spacing: 6rpx;
  line-height: 1.6;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  width: auto;
  line-height: 1.5;
}

.clear-btn-wrapper {
  margin-top: 40rpx;
  text-align: center;
}

.clear-btn {
  background: #fff;
  color: #ff5252;
  border: 2rpx solid #ff5252;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  width: auto;
}
